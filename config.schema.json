{
  "pluginAlias": "HoneywellHome",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Use the 'headerDisplay' in the config.schema.json to update this header text to provide instructions etc..",
  "footerDisplay": "Use the 'footerDisplay' to display additional information after the account linking has completed.",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name",
        "default": "HoneywellHome",
        "required": true
      },
      "credentials": {
        "type": "object",
        "properties": {
          "consumerKey": {
            "title": "Consumer Key",
            "type": "string",
            "required": true
          },
          "consumerSecret": {
            "title": "Consumer Secret",
            "type": "string"
          },
          "refreshToken": {
            "title": "Refresh Token",
            "type": "string",
            "required": true
          },
          "notice": {
            "title": "Notice",
            "type": "string",
            "required": true,
            "default": "Keep your tokens a secret!"
          }
        }
      },
      "options": {
        "type": "object",
        "properties": {
          "ttl": {
            "title": "TTL",
            "type": "number",
            "default": 60,
            "minimum": 20
          },
          "debug": {
            "title": "Debug Mode",
            "type": "boolean"
          }
        }
      }
    }
  },
    "layout": [
      {
        "type": "fieldset",
        "title": "Advanced Settings",
        "expandable": true,
        "expanded": false,
        "items": [
          {
            "type": "help",
            "helpvalue": "<h5>TTL</h5><em class='primary-text'>TTL indicates the number of seconds between polls of the Honeywell Home service.</em>"
          },
          {
            "key": "options.ttl",
            "notitle": true
          },
          {
            "type": "help",
            "helpvalue": "<h5>Debug Mode</h5><em class='primary-text'>Indicate if debug level logging should be enabled.</em>"
          },
          "options.debug"
        ]
      }
    ]
}
